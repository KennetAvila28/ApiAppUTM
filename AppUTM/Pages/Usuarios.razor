@page "/Usuarios"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]
@inject HttpClient Http

<h1>Usuarios</h1>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ClaveEmpleado</th>
                <th>Nombres</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.ClaveEmpleado</td>
                    <td>@user.Nombres</td>
                    <td>@user.ApellidoPaterno</td>
                    <td>@user.ApellidoMaterno</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    private IList<UserReturn> users;
    protected override async Task OnInitializedAsync()
    {
        var data = await Http.GetFromJsonAsync<ApiResponse<IList<UserReturn>>>("Users");
        users = data.Data;
    }

}