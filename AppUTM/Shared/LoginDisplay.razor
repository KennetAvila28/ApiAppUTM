@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.Graph
@using System.IO
@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager
@inject GraphServiceClient GraphClient

<AuthorizeView>
    <Authorized>
        @context.User.Identity?.Name
        @*<img src="https://graph.microsoft.com/beta/users/@context./photo/$value" alt="image" class="img-fluid avatar-md rounded-circle">*@
        <button class="nav-link btn btn-outline-light ml-2" @onclick="BeginLogout"> Log out</button>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-outline-light" href="authentication/login">Log in</a>
    </NotAuthorized>
</AuthorizeView>

@code{
    //string stream;
    private async Task BeginLogout(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
        //stream = GraphClient.Me.Photo.RequestUrl;
        //stream = GraphClientExtensions.ImageToBase64(streamsAsync).ToString();
    }
}