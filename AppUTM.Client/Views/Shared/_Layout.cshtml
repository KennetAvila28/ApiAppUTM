@using Microsoft.Identity.Web
@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewData["Title"] - AppUTM.Client</title>*@
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/main.css">
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" id="logo" alt="UTM">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="me-auto"></div>

                <ul class="navbar-nav mb-2 mb-lg-2 fw-bold d-flex">
                    <li class="nav-item mx-auto user-name">
                        <a class="nav-link active">@User.Claims.FirstOrDefault(x => x.Type == "name")?.Value</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Empresas" asp-action="Index">Empresas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="Reportes/reportes.html">Reportes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="Usuarios/usuarios.html">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="MicrosoftIdentity" class="nav-link active" asp-controller="Account" asp-action="SignOut">Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!--footer-->
    <!--/footer-->
    <div>
        <main role="main" class="mt-3 container">           
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
</script>