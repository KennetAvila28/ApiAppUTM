@model AppUTM.Client.Models.Cupones

@{
    ViewData["Title"] = "Listado de cupones";
}

<div class="d-flex">
    <h2 class="mt-2 mb-3">Cupones de @Model.Empresa.Nombre</h2>
    <a class="btn btn-secondary myButton" asp-controller="Empresas" asp-action="Index">Regresar</a>      
</div>
<div class="container mt-4 mx-auto row center-block">
    <div class="col">
        <div class="d-flex">
            <h5>Cupones textuales</h5>
            <a class="btn btn-dark btn-sm text-center mx-3" asp-action="CreateGenerico" asp-route-Id="@Model.Empresa.EmpresaId">Agregar</a>
        </div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Fecha de vencimiento</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.cuponesGenericos)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(x => item.CuponGeneridoId)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.FechaExpiracion)
                    </td>
                    <td><a class="btn btn-primary" asp-route-Id="@item.CuponGeneridoId" asp-action="UpdateGenerico">Editar</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col">
        <div class="d-flex">
            <h5>Cupones por imagen</h5>
            <a class="btn btn-dark btn-sm text-center mx-3" asp-action="CreateCuponImagen" asp-route-Id="@Model.Empresa.EmpresaId">Agregar</a>
        </div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Fecha de vencimiento</th>
                    <th scope="col">Imagen</th>
                    <td scope="col"></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.cuponesImagen)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(x => item.CuponImagenId)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.FechaExpiracion)
                    </td>
                   
                    <td>
                        <img class="qr" src="http://localhost:59131/api/CuponesImagen/image?nombreArchivo=@item.Imagen" alt="Cupón @item.EmpresaId">
                    </td>
                    <td><a class="btn btn-primary" asp-route-Id="@item.CuponImagenId" asp-action="UpdateCuponImagen">Editar</a></td>
                </tr>
                }               
            </tbody>
        </table>
    </div>
</div>


