@model AppUTM.Client.Models.Users.UserReturn;
@using AppUTM.Client.Models.Roles;

@{
    List<RoleReturn> roles = ViewBag.Roles;
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClaveEmpleado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClaveEmpleado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApellidoPaterno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApellidoPaterno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApellidoMaterno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApellidoMaterno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserRoles)
        </dt>
        <dd class="col-sm-10">
            @foreach (var u in Model.UserRoles)
            {
                <label value="@u.RoleId" /><label>@u.Role.Nombre  </label>

            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-green btn-sm" @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) </a>
    <a class="btn btn-secondary btn-sm" asp-action="Index">Regresar</a>
</div>
